n = 4; %棋子个数
times = 6; %操作次数
x0=zeros(1,n); %构建1*n的全零矩阵（n元数组）
x1=zeros(1,n);

for i = 1:n
  k=rand; %生成0-1之间随机数，k=rand（1，1）1*1矩阵，k=rand
  if(k>0.5)
    x0(i)=1; %黑子
  else
    x0(i)=-1; %白子
  end
end;

for i = 1:times
  for k = 1:n-1
    x1(k)=x0(k)*x0(k+1);
  end
  x1(n)=x0(n)*x0(1);
  x0=x1; %每操作一次，将原x0换为x1
end
